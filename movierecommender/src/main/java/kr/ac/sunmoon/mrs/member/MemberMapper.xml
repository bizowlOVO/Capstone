	<select id="selectMember" parameterType="kr.ac.sunmoon.mrs.agent.Member" 
			resultType="kr.ac.sunmoon.mrs.agent.Member" >
		SELECT
		     MEMBER_ID
		    ,MEMBER_PASSWORD
		    ,MEMBER_NAME
		    ,MEMBER_AGE
		    ,MEMBER_GENDER
		    ,MEMBER_STATE
		FROM 
			 MEMBER
		WHERE 
			 MEMBER_ID = #{memberId}
	
	</select>
	    <select id="loginChecker" resultType="int" parameterType="String">
    	SELECT
    		COUNT(*)
    	FROM
    		MEMBER
    	WHERE
    		MEMBER_ID = #{memberId} AND MEMBER_PASSWORD = #{memberPassword}
